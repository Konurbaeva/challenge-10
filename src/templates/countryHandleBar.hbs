<div class="card">{{this}}
  <div class="card-img-top">
    <img src="{{flags.svg}}" alt="{{name.official}}">
  </div>
  <div class="card-body">
    <h2 class="card-title">Name: {{name.official}}</h2>
    <p class="card-text">capital: {{ capital }}</p>
    <p class="card-text">Рост: {{languages}}</p>

    <p class="card-text"><b>Умения</b></p>
    <ul class="list-group"></ul>
    {{#each languages}}
      <li class="list-group-item">{{this}}</li>
    {{/each}}
    </ul>
  </div>
</div>